# === Search Engine ===
SEARCH_ENGINE=duckduckgo
SEARCH_REGION=wt-wt  # wt-wt = worldwide, ru-ru = Russia

# === LLM Provider ===
LLM_PROVIDER=local
USE_LLM_ROUTER=true

# === Local LLM ===
LLM_API_URL=http://your-clore-server-ip:5000/v1
LLM_API_KEY=dummy

# === OpenAI (optional) ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# === Database ===
DATABASE_URL=postgresql://research_user:research_pass@postgres:5432/research_db

# === Redis ===
REDIS_URL=redis://redis:6379

# === Search Settings ===
MAX_RESULTS_SIMPLE=5
MAX_RESULTS_PRO=10
MAX_CONTENT_LENGTH=2500

# === Context Settings ===
MAX_CONTEXT_MESSAGES=10
MAX_CONTEXT_TOKENS=4000

# === CORS ===
CORS_ORIGINS=["http://localhost:3000"]

# === Server ===
HOST=0.0.0.0
PORT=8080